<%- include('partials/_header'); %>

    <%- include('partials/_nav'); %>

    <title>Employees</title>
    <div class="container mt-5">
        <div class="row">
            <h1>Welcome to employees</h1>
        </div>
        <div class="row">
            <div class="col-md">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row no-gutters tarjeta">
                      <div class="col-md-4">
                        <img src="https://image.freepik.com/vector-gratis/reclutamiento-profesionales-que-estudian-perfiles-candidatos_1262-21404.jpg" class="card-img" alt="...">
                      </div>
                      <div class="col-md-8">
                        <a href="#editEmplo" class="ap">
                          <div class="card-body">
                            <h5 class="card-title">Edit employees</h5>
                            <p class="card-text">Aquí podrá agregar, elimimar y editar a cualquier empleado</p>
                          </div>
                        </a>
                      </div>
                    </div>
                  </div>
            </div>
            <div class="col-md">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row no-gutters tarjeta">
                      <div class="col-md-4">
                        <img src="https://image.freepik.com/vector-gratis/ilustracion-concepto-oficina_114360-1248.jpg" class="card-img" alt="...">
                      </div>
                      <div class="col-md-8">
                        <a href="#updateDept" class="ap">
                          <div class="card-body">
                            <h5 class="card-title">Edit departaments</h5>
                            <p class="card-text">Aquí podrá agregar, eliminar, editar y ver todos los departamentos registrados</p>
                          </div>
                        </a>
                      </div>
                    </div>
                  </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row no-gutters tarjeta">
                      <div class="col-md-4">
                        <img src="https://image.freepik.com/vector-gratis/ilustracion-concepto-espacio-trabajo-compartido_114360-5249.jpg" class="card-img" alt="...">
                      </div>
                      <div class="col-md-8">
                        <div class="card-body">
                          <h5 class="card-title">Edit titles</h5>
                          <p class="card-text">Aquí podrá editar, crear, eliminar y ver todos los titulos de los empleados registrados</p>
                        </div>
                      </div>
                    </div>
                  </div>
            </div>
            <div class="col-md">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row no-gutters tarjeta">
                      <div class="col-md-4">
                        <img src="https://image.freepik.com/vector-gratis/ilustracion-concepto-espacio-trabajo-compartido_114360-5317.jpg" class="card-img" alt="...">
                      </div>
                      <div class="col-md-8">
                        <div class="card-body">
                          <h5 class="card-title">View registered employees</h5>
                          <p class="card-text">Aquí se mostraran todos los empleados registrados</p>
                        </div>
                      </div>
                    </div>
                  </div>
            </div>
        </div>
        <hr>
        <!-- aquí empiezan las secciones
            *en los empleados el u¿numero de empleado es autocontable
            *fecha de contratación la toma de forma automatica-->
        
        <section class="card">
            <div class="row m-3">
                <div class="col">
                    <p class="h2 text-center" id="editEmplo">Employees</p>
                    <form>
                        <div class="form-row">
                          <div class="form-group col-md-6">
                            <label for="empNum">Employees number</label>
                            <input type="number" class="form-control" id="empNum" name="employeesNumber">
                          </div>
                            <div class="form-group col-md-6">
                                <label for="birthday">Birthday</label>
                                <input type="date" id="birthday" class="form-control" name="birthday">
                            </div>   
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="name">First name</label>
                                <input type="text" id="name" class="form-control" name="name">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="las">Last name</label>
                                <input type="text" id="las" class="form-control" name="last">
                            </div>
                        </div>
                        <div class="form-row">
                          <div class="form-group col-md-6">
                            <label for="from">From date</label>
                            <input type="date" id="from" class="form-control" name="fromDate">
                          </div>
                          <div class="form-group col-md-6">
                            <label for="to">To date</label>
                            <input type="date" id="to" class="form-control" name="toDate">
                          </div>
                        </div>
                        <div class="form-row">
                          <div class="form-group col-md-6">
                            <label for="sala">Salary</label>
                            <input type="number" id="sala" class="form-control" name="salary">
                          </div>
                          <div class="form-group col-md-6">
                            <label for="title">Title</label>
                            <input type="text" id="title" name="title" class="form-control">
                          </div>
                        </div>
                        <div class="form-row">
                          <div class="col-md-6">
                            <div class="form-group">
                              <label>Departament</label>
                              <select class="form-control" id="selectEmployee">
                                <option>Some</option>
                              </select>
                            </div>
                          </div>
                          <div class="form-group col-md-6">
                            <label for="gender">Gender</label>
                            <select id="gender" class="form-control">
                                <option id="M">M</option>
                                <option id="F">F</option>
                            </select>
                        </div>
                        </div>
                        <div class="form-row pl-1">
                          <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input" id="manager" value="yes">
                            <label class="form-check-label" for="manager">Manager</label>
                          </div>
                        </div>  
                        <div class="form-row">
                            <div class="form-group col-md">
                                <input type="button" value="Register employee" class="btn btn-primary" onclick="saveNewEmployee()">
                                <input type="reset" value="Clean inputs" class="btn btn-outline-danger">
                            </div>
                        </div>
                    </form>
                </div>
          </div>
          <div class="row m-3">
            <table class="table table-hover" id="tableEmployees">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">First name</th>
                  <th scope="col">Last name</th>
                  <th scope="col">Birthday</th>
                  <th scope="col">Gender</th>
                  <th scope="col">Hire date</th>
                  <th scope="col">Departament</th>
                  <th scope="col">Salary</th>
                  <th scope="col">Title</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <th scope="row">1</th>
                  <td>Mark</td>
                  <td>Otto</td>
                  <td>@mdo</td>
                </tr>
                <tr>
                  <th scope="row">2</th>
                  <td>Jacob</td>
                  <td>Thornton</td>
                  <td>@fat</td>
                </tr>
                <tr>
                  <th scope="row">3</th>
                  <td>Larry</td>
                  <td>the Bird</td>
                  <td>@twitter</td>
                </tr>
              </tbody>
            </table>
          </div>
        </section>

        <hr class="my-4">

        <section class="card">
          <div class="row m-3" id="updateDept">
            <form class="col">
              <p class="h2 text-center">Departaments</p>
              <div id="alertDepartaments">

              </div>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="dept">Departament</label>
                  <input type="text" class="form-control" name="departament" id="dept">
                </div>
                <div class="form-gruop col-md-6">
                  <label for="id">ID</label>
                  <input type="text" class="form-control" id="idDept">
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <input type="button" value="Add departament" class="btn btn-primary mt-4" id="saveDepartament" onclick="saveNewDept()">
                  <input type="button" value="Update departament" class="btn btn-success mt-4" id="updateDepartament">
                </div>
              </div>
            </form>
          </div>
          <div class="row m-3">
            <div class="col">
              <table class="table table-hover" id="showDpt">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Departament</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <th scope="row">1</th>
                    <td>Mark</td>
                  </tr>
                  <tr>
                    <th scope="row">2</th>
                    <td>Jacob</td>
                  </tr>
                  <tr>
                    <th scope="row">3</th>
                    <td>Larry</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </section>
    </div>

    <!--Aquí van los scripts de los cruds-->
    <script src="public/js/general.js"></script>
    <script src="public/js/departaments.js"></script>
    <script src="public/js/employees.js"></script>

<%- include('partials/_footer'); %>